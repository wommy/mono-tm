{
  "name": "@technomad/tailwind",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "cssnano": {
    "preset": [
      "default",
      {
        "discardComments": {
          "removeAll": true
        }
      }
    ]
  },
  "scripts": {
    "test": "echo testing eleventy with $npm_package_version",
    "build": "postcss src --base -d style --verbose",
    "cssnano": "postcss style/reset.css --use cssnano -o style/reset.min.css --verbose",
    "start": "postcss src --base -d style --verbose --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.1",
    "cssnano": "^5.0.15",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.0.11"
  }
}
